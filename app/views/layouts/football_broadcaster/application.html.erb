<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>FootballBroadcaster</title>
  <%= stylesheet_link_tag    "football_broadcaster/application", media: "all" %>
  <%= javascript_include_tag "football_broadcaster/application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>

  <%= yield %>
</div>

</body>
</html>
